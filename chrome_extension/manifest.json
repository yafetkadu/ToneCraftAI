{
  "manifest_version": 3,
  "name": "ToneCraft AI",
  "version": "2.1",
  "description": "Generate emails with AI",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "https://www.googleapis.com/*"
  ],
  "action": {
    "default_popup": "test.html"
  },
  "background": {
    "service_worker": "background.js"
  }
  
}
