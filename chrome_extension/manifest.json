{
  "manifest_version": 3,
  "name": "ToneCraft AI",
  "version": "3.0",
  "description": "Generate emails with AI",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": [
    "https://tonecraftai.onrender.com/*",
    "https://www.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/favicon-16x16.png",
      "32": "assets/favicon-32x32.png"
    }
  },
  "icons": {
    "16": "assets/favicon-16x16.png",
    "32": "assets/favicon-32x32.png",
    "128": "assets/perfect-size.png",
    "192": "assets/favicon-192x192.png",
    "512": "assets/favicon-512x512.png"
  }
}
